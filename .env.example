# =============================================================
# Time Logger - Environment Variables
# =============================================================
# Copy this file to .env.local and fill in your values.
#
# ENVIRONMENTS:
#   Local dev:  Use values from `npx supabase status` after `npx supabase start`
#   Production: Use values from your Supabase project dashboard
# =============================================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL="http://127.0.0.1:54321"          # Local: from `supabase status`
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"               # Local: from `supabase status`
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"            # Local: from `supabase status`

# --- NextAuth ---
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"      # Run: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"

# --- Google OAuth ---
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# --- OpenAI ---
OPENAI_API_KEY="sk-your-openai-key"

# --- Email (Resend) ---
EMAIL_FROM="onboarding@resend.dev"
RESEND_API_KEY="re_your-resend-key"

# --- Web Push (VAPID) ---
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_EMAIL="mailto:your-email@example.com"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# --- Cron ---
CRON_SECRET="your-cron-secret"

# --- Sentry (Error Tracking) ---
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
